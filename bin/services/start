#! /usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="Start Services"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

ABS_PATH=$(readlink -f "$0")
bin_path=$(dirname $ABS_PATH)
bin_path="$(realpath .)/bin"

source "$bin_path/services/fargate-start"
source "$bin_path/services/rds-start"

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="RDS and Fargate are now upping and running"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"
